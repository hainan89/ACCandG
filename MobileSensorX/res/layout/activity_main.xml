<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	
    
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="40dip"
	    android:orientation="horizontal">
	    
	    <Button android:id="@+id/bt_start_s"
	        android:layout_width="0dip"
	        android:layout_weight="1.0"
	        android:layout_height="50dip"
	        android:text="Start" />
	    
	    <Button android:id="@+id/bt_end_s"
	        android:layout_width="0dip"
	        android:layout_weight="1.0"
	        android:layout_height="50dip"
	        android:text="End" />
	    
	    <Button android:id="@+id/bt_get_all_sensors_s"
	        android:layout_width="0dip"
	        android:layout_weight="1.0"
	        android:layout_height="50dip"
	        android:text="List" />
	    <Button android:id="@+id/bt_close"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:text="X" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal">
	    <TextView
	        android:id="@+id/tv_fre_note"
	        android:layout_width="0dip"
	        android:layout_weight="4.0"
	        android:layout_height="wrap_content"
	        android:textSize="20dp"
	        android:text="Sampling Period:"/>
	    <EditText
	        android:id="@+id/et_frequency"
	        android:layout_width="0dip"
	        android:layout_weight="2.0"
	        android:layout_height="wrap_content"/>
	    
	    <Spinner android:id="@+id/sp_unit"   
           android:layout_width="0dip"
           android:layout_weight="2.0"  
           android:layout_height="wrap_content"> 
	    </Spinner>  
    </LinearLayout>
	<TextView android:id="@+id/tx_storage_path"
		        android:layout_width="match_parent"
		        android:layout_height="20dip"
		        android:background="#A9A9A9"/>   
	<ScrollView android:id="@+id/ly_scroll_list"
		    android:layout_width="match_parent"
		    android:layout_height="0dip"
		    android:layout_weight="1.0"
		    android:orientation="vertical"
		    android:scrollbars="vertical"
			android:fadeScrollbars="false"
			android:background="#FFFFE0">
	    	        
	    <LinearLayout android:id="@+id/ly_sensor_list"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
		    
		</LinearLayout>
	</ScrollView>
		
	<TextView android:id="@+id/tx_reading_data"
		        android:layout_width="match_parent"
		        android:scrollbars="vertical"
		        android:fadeScrollbars="false"
		        android:layout_height="0dip"
		        android:layout_weight="2.0"
		        android:background="#A9A9A9"/>    	
</LinearLayout>